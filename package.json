{
    "name": "style-o-matic",
    "version": "1.1.0",
    "description": "Experimental element-based CSS framework with accompanying React.js component library",
    "main": "lib/index.js",
    "module": "es/index.js",
    "files": [
        "css",
        "es",
        "lib",
        "umd"
    ],
    "scripts": {
        "build": "nwb build-react-component && gulp",
        "clean": "nwb clean-module && nwb clean-demo",
        "start": "nwb serve-react-demo",
        "docs": "jsdoc -c ./jsdoc.config.json -d docs -t ./node_modules/ink-docstrap/template -R README.md",
        "test": "nwb test-react",
        "test:coverage": "nwb test-react --coverage",
        "test:watch": "nwb test-react --server",
        "precommit": "lint-staged",
        "lint-js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
        "lint-css": "stylelint \"src/**/*.{css,less,styl,scss,sass,sss}\"",
        "lint": "yarn run lint-js && yarn run lint-css",
        "fix-js": "yarn run lint-js --fix",
        "fix-css": "yarn run lint-css --fix",
        "fix": "yarn run fix-js && yarn run fix-css"
    },
    "dependencies": {
        "compass": "^0.1.1",
        "expect": "^23.2.0",
        "intl": "^1.2.5",
        "lodash": "^4.17.5",
        "mathsass": "^0.10.1"
    },
    "peerDependencies": {
        "react": "15.x",
        "react-dom": "15.x",
        "react-router": "2.x",
        "react-router-dom": "4.x"
    },
    "devDependencies": {
        "autoprefixer": "^7.2.5",
        "axios": "^0.18",
        "babel-eslint": "^8.2.1",
        "classnames": "^2.2.5",
        "cross-env": "^5.1",
        "del": "^3.0.0",
        "dom-helpers": "^3.3.1",
        "eslint": "^4.16.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-import-resolver-node": "^0.3.2",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-css-modules": "^2.7.5",
        "eslint-plugin-flowtype": "^2.41.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-prettier": "^2.5.0",
        "eslint-plugin-react": "^7.4.0",
        "event-stream": "^3.3.4",
        "gulp": "^4.0.0",
        "gulp-autoprefixer": "^4.1.0",
        "gulp-concat": "^2.6.1",
        "gulp-css-inline-images": "^0.1.1",
        "gulp-csso": "^3.0.1",
        "gulp-header": "^1.8.9",
        "gulp-if": "^2.0.2",
        "gulp-load-plugins": "^1.5.0",
        "gulp-sass": "^4.0.1",
        "gulp-size": "^2.1.0",
        "gulp-strip-comments": "^2.5.2",
        "ink-docstrap": "^1.3.2",
        "jsdoc": "^3.5.5",
        "keycode": "^2.1.9",
        "merge-stream": "^0.1.7",
        "node-sass": "^4.9.2",
        "nwb": "^0.22.0",
        "postcss": "^6.0.16",
        "postcss-calc": "^6.0.1",
        "postcss-color-function": "^4.0.1",
        "postcss-custom-media": "^6.0.0",
        "postcss-custom-properties": "^6.2.0",
        "postcss-custom-selectors": "^4.0.1",
        "postcss-flexbugs-fixes": "^3.3.0",
        "postcss-import": "^11.0.0",
        "postcss-loader": "^2.0.10",
        "postcss-media-minmax": "^3.0.0",
        "postcss-nested": "^2.1.2",
        "postcss-nesting": "^4.2.1",
        "postcss-pseudoelements": "^5.0.0",
        "postcss-selector-matches": "^3.0.1",
        "postcss-selector-not": "^3.0.1",
        "prettier": "^1.10.2",
        "prop-types": "^15.6.1",
        "prop-types-extra": "^1.0.1",
        "react": "^16.3.0",
        "react-dom": "^16.4.1",
        "react-router": "^2.8.1",
        "react-router-dom": "^4.3.1",
        "remarkable": "^1.7.1",
        "run-sequence": "^1.0.0",
        "uncontrollable": "^4.1.0",
        "vinyl-buffer": "^1.0.1",
        "vinyl-paths": "^1.0.0",
        "vinyl-source-stream": "^1.1.2",
        "warning": "^3.0.0"
    },
    "full-lint-staged": {
        "*.{js,jsx}": [
            "eslint --no-ignore --fix",
            "git add --force"
        ],
        "*.{json,md,graphql}": [
            "prettier --write",
            "git add --force"
        ],
        "*.{css,less,styl,scss,sass,sss}": [
            "stylelint --fix",
            "git add --force"
        ]
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --no-ignore --fix",
            "git add --force"
        ],
        "*.{json,md,graphql}": [
            "prettier --write",
            "git add --force"
        ]
    },
    "author": "Steven Jackson [sdj.root@gmail.com]",
    "homepage": "http://stevejackson-studios.com",
    "license": "MIT",
    "repository": "https://github.com/sdjack/Style-O-Matic",
    "keywords": [
        "react",
        "reactjs",
        "framework"
    ]
}
